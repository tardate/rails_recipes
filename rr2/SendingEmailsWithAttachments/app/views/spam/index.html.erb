<%= form_tag send_spam_path, :multipart => true do %>
  <p>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :file %>
    <%= file_field_tag :file %>
  </p>
  <%= submit_tag "Spam!" %>
<% end %>
